<%- include('../views/partials/header'); -%>
<div class="row">
    <div class="col-md-6">
        <form class="" action="/todo/add" method="post">
          <div class="form-group">
            <label for="name">Todo Name</label>
            <input class="form-control" type="text" name="todo" placeholder="New Todo">
          </div>
          <div class="form-group">
            <label for="date">Todo Date</label>
            <input class="form-control" type="date" name="date" value="date" placeholder="Date">
          </div>
          <button class="btn btn-primary" type="submit" name="button">Add Todo</button>
        </form>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
          <% todos.forEach(function(todo){ %>
            <li class="list-group-item"><%= todo.task %> - <%= todo.date %>
              <a class="btn btn-secondary" href="/todo/edit/<%= todo._id %>">Edit</a>
              <a data-id="<%= todo._id %>" href="#" class="delete-todo btn btn-danger">Delete</a>
            </li>
          <% }) %>
        </ul>
    </div>
</div>
<%- include('../views/partials/footer'); -%>
